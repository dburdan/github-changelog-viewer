{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/chrome",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "removeComments": true,
  }
}